<div class="row">
  <h1 style="text-align:center;">Add New comments to <%= movie.name %></h1>
  <div style="width:30%; margin: 25px auto;">
<form action="/movies/<%=movie._id%>/comments" method="POST">
  <div class="form-group">
    <input class="form-control" type="text" name="comment[text]" placeholder="text">
  </div>
  <div class="form-group">
  <!--<input class="form-control" type="text" name="comment[author]" placeholder="author">-->
  <input type='hidden' name='comment[author]' value=<%=currentUser.username%> >
  </div>
  
  
  
  
  <div class="form-group">
  <button class="btn btn-lg btn-primary btn-block">Submit!</button>
  </div>
</form>
<a href="/movies">Go Back</a>
</div>

</div>

</div>

